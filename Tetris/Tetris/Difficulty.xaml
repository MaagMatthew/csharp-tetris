<Window x:Class="Tetris.Difficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="Difficulty" Height="300" Width="300">
    <Grid>
        <Button Content="Easy" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Width="75" Click="Easy_Click"/>
        <Button Content="Medium" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Width="75" Click="Medium_Click"/>
        <Button Content="Hard" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Width="75" Click="Hard_Click"/>
        <Button Content="NIGHTMARE" HorizontalAlignment="Center" Background="Black" Foreground="Red" Margin="0,143,0,0" VerticalAlignment="Top" Width="75" Click="Nightmare_Click"/>
        <Label Content="Difficulty:" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="42" Click="Back_Click"/>

    </Grid>
</Window>
