<Window x:Class="Tetris.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        Title="GameOverWindow" Height="450" Width="402.941">
    <Grid>
        <Label Content="GAME OVER" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button Content="Try Again" HorizontalAlignment="Center" Margin="0,173,0,0" VerticalAlignment="Top" Width="75" Click="Try_Again"/>
        <Button Content="Leaderboard" HorizontalAlignment="Center" Margin="162,198,162,0" VerticalAlignment="Top" Width="74" Click="Leaderboard"/>
        <Button Content="Menu" HorizontalAlignment="Center" Margin="162,223,162,0" VerticalAlignment="Top" Width="74" Click="Menu"/>
        <Button Content="Quit" HorizontalAlignment="Center" Margin="162,248,162,0" VerticalAlignment="Top" Width="74" Click="Quit"/>
        <Label Content="Score: " HorizontalAlignment="Left" Margin="96,118,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,123,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Window>
